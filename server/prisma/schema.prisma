generator client {
  provider = "prisma-client-js"
  // Buradaki engineType satırını sil
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ... gerisi aynı kalsın

// Ürün Modeli
model Product {
  id          Int       @id @default(autoincrement())
  name        String
  basePrice   Float     // price -> basePrice olarak değişti
  imageUrl    String
  category    String    // 'shoes' | 'clothing'
  brand       String    @default("General")
  description String?
  createdAt   DateTime  @default(now())
  
  variants    Variant[] // İlişki
  images      ProductImage[] // Çoklu resim ilişkisi
}

// Varyant Modeli (Beden/Numara ve Stok)
model Variant {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  size      String  // "S", "M", "42" vb.
  stock     Int     @default(1) // Stok adedi
}

// Ürün Resimleri Modeli (Yeni)
model ProductImage {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
}