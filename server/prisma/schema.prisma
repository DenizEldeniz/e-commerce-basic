generator client {
  provider = "prisma-client-js"
  // Buradaki engineType satırını sil
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ... gerisi aynı kalsın

// Ürün Modeli (Java'daki Class gibi düşün)
model Product {
  id          Int     @id @default(autoincrement()) // Otomatik artan ID
  name        String  // Ürün adı
  price       Float   // Fiyatı
  description String? // Açıklama (Opsiyonel olabilir)
  imageUrl    String  // Resim linki
  category    String  // Kategori (Giyim, Elektronik vb.)
  stock       Int     // Stok adedi (0 ise 'Stokta Yok' diyeceğiz)
  
  createdAt   DateTime @default(now()) // Oluşturulma tarihi
}